function aurget {
    sudo curl -L -O https://aur.archlinux.org/cgit/aur.git/snapshot/${1}.tar.gz
}
function get {
    #sudo apt install "$1";
    sudo pacman -S "$1";
    sudo updatedb &
}
function update {
    #sudo apt update;
    sudo pacman -Syu;
    sudo updatedb &
}
function upgrade {
    sudo apt upgrade;
    sudo updatedb &
}
function unget {
    #sudo apt purge "$1";
    sudo pacman -Rsn "$1";
    sudo updatedb &
}
function vd {
	gvim $1 &> /dev/null &
}
function cd {
    builtin cd $@
    pwd > ~/.last_dir
}
alias ld='cd $( cat ~/.last_dir )'
#alias .='nautilus --no-desktop . &> /dev/null &'
alias .='thunar . &> /dev/null &'
alias fuck='pkill'
alias please='sudo $( fc -ln -1)'
alias lst='ls -lt | more'
alias ll='ls -l'
alias la='ls -a' 
alias svim='sudo vim'
alias ..='cd ..'
alias ...='cd ../..'
alias sreboot='sudo reboot'
alias rb='rm *~'
alias pdf='evince'
alias screenshot='scrot -s ~/photos/screenshots/%b%d-%H%M%S.png'
alias display='mirage'
alias r='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`'
alias usrmount='sudo mount -o gid=users,fmask=113,dmask=002'
alias shrecvnc='ssh -Y shrec -L 5903:localhost:5903'

alias -g M='| more'
alias -g L='| less'
alias -g G='| grep -i'

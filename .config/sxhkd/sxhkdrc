#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	urxvt

# program launcher
alt + d
	rofi -show run

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
alt + shift + w 
	bspc node -k

# Kill 
alt + shift + q
    bspc node -c

# alternate between the tiled and monocle layout
alt + f
	bspc desktop -l next

# send the newest marked node to the newest preselected node
alt + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
alt + g
	bspc node -s biggest

alt + shift + g
	bspc node -s biggest.local
#
# state/flags
#

# set the window state
alt + {t,shift + t,s,shift+space}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
alt + ctrl + {m,x,y,z,minus}
	bspc node -g {marked,locked,sticky,private,hidden}

# bring back hidden nodes
alt + ctrl + equal
    bspc node $(bspc query -N -n .hidden | tail -n1) -g hidden=off
#
# focus/swap
#

# focus the node in the given direction
##alt + {_,shift + }{j,k,i,l}
##	bspc node -{f,s} {west,south,north,east} --follow 
alt + i
    bspc node -f north || bspc monitor -f north
alt + k
    bspc node -f south || bspc monitor -f south
alt + j
    bspc node -f west || bspc monitor -f west || bspc desktop -f west
alt + l
    bspc node -f east || bspc monitor -f east || bspc desktop -f east

# Swap node
# If no node exist, send node to monitor instead
alt + shift + i
    if ! bspc node -s north.local; then bspc node -m north && bspc node $(bspc query -N -n last) -f; fi
alt + shift + k
    if ! bspc node -s south.local; then bspc node -m south && bspc node $(bspc query -N -n last) -f; fi
alt + shift + j
    if ! bspc node -s west.local; then bspc node -m west && bspc node $(bspc query -N -n last) -f; fi
alt + shift + l
    if ! bspc node -s east.local; then bspc node -m east && bspc node $(bspc query -N -n last) -f; fi

# Focus next node
alt + {space,z}
	bspc node -f {next,prev}.local

#alt + {_,shift + }{Left,Down,Up,Right}
#	bspc node focused.tiled -{f,s} {west,south,north,east} --follow

# focus the node for the given path jump
alt + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
alt + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

alt + {1-9,0}
    /home/seth/Projects/scripts/bspcNewMonitor '{1-9,10}'
# focus or send to the given desktop
#alt + {_,shift + }{1-9,0}
alt + shift + {1-9,0}
    /home/seth/Projects/scripts/bspcSwapMonitor '{1-9,10}'

alt + {_,shift + } r
	bspc node @/ -R {90,270}

#
# preselect
#

# preselect the direction
alt + ctrl + {j,k,i,l}
	bspc node -p {west,south,north,east}


# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {j,k,i,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {j,k,i,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#### VOLUME ####
# Raise
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +2%
# Lower
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -2%
# Mute
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

#### Brightness ####
XF86MonBrightnessUp
    light -A 5
XF86MonBrightnessDown
    light -U 5

#### Lock screen ####
ctrl + super + alt + l
    i3lock -c 000000

#### Full Resize ####
alt + {minus,equal}
    bspc config window_gap $(( $(bspc config window_gap) {-,+} 2 ))

#### Resize new windows ####
alt + ctrl + {1-9}
    bspc window -r 0.{1-9}


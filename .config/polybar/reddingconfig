[colors]
background = #99000000
background-alt = #444
foreground = ${xrdb: color1}
foreground-alt = #f78026
bg1 = ${xrdb: color0}
bg2 = #f68028
bg3 = #5c707b
primary = #ffb52a
secondary = #e60053
alert = #ff2222

[global/wm]
margin-top = 5
margin-bottom = 5

[settings]
; The throttle settings lets the eventloop swallow up til X events
; if they happen within Y millisecond after first event was received.
; This is done to prevent flood of update event.
throttle-output = 5
throttle-output-for = 10

; Time in milliseconds that the input handler will wait between processing events
throttle-input-for = 30

; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true

[bar/base]
dpi = 72
bottom = false
width = 100%
height = 30
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = hack:pixelsize=12;2
font-1 = unifont:size=10;2
font-2 = siji:pixelsize=10;3
font-3 = FontAwesome:pixelsize=14;2
tray-position = left
tray-padding = 3 

[bar/top]
inherit= bar/base

modules-left = xwindow
modules-center = i3
modules-right = weather wlan battery date 

[bar/bottom]
inherit= bar/base
bottom= true

modules-left = cpu memory 
modules-center = networkspeedup pkg networkspeeddown
modules-right = coretemps filesystem volume

;;;;;;;;;;;;;;;
;;; Modules ;;;
;;;;;;;;;;;;;;;

[module/weather]
type = custom/script
interval  = 300 

format-prefix = "ÔÉÇ "
format-prefix-foreground = ${colors.bg1}
exec = ~/.config/polybar/weather.sh

[module/xwindow]
type = internal/xwindow

label = " %title:0:60:...%"
format-prefix ="  ÔÅî"
format-prefix-foreground = ${colors.bg1}

[module/cmus]
type = custom/script

exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/filesystem]
type = internal/fs
interval = 25
format-mounted = <label-mounted>
format-mounted-prefix="ÔÇ† "
format-mounted-prefix-foreground = ${colors.bg1}
label-mounted = "%percentage_used%%"

;Directory
mount-0 = /

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
strip-wsnumbers = true

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = #000000

label-focused = ÔÑë 
label-focused-background = ${colors.background} 
label-focused-foreground = ${colors.bg1}
label-focused-underline = #00ffffff
label-focused-padding = 2 

label-unfocused = Ôáõ
label-unfocused-foreground = ${colors.bg1}
label-unfocused-padding = 2 

label-urgent = ‚ö†
;label-urgent-background = ${colors.background} 
label-urgent-foreground = ${colors.bg2}
label-urgent-padding = 2 

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

[module/github]
type = internal/github
token = ${env:GITHUB_TOKEN}

label = "%notifications%"
format-underline = #2aa198
format-prefix = "ÔÇõ "
format-prefix-foreground = #


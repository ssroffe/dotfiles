[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = "Ôá´ "
format-connected-prefix-foreground = ${colors.bg1}

label-connected = "%{A1:connman-gtk &:}%essid%%{A}"
label-disconnected = "%{A1:connman-gtk &:}Ôá´%{A}"
label-disconnected-foreground = #5b

ramp-signal-0 = Óàò
ramp-signal-1 = Óàô
ramp-signal-2 = Óàö
ramp-signal-3 = Óàö
ramp-signal-4 = Óàö
ramp-signal-foreground = ${colors.bg1}

[module/networkspeedup]
type = internal/network
interface = wlp3s0
label-connected = "%upspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "ÔÅ¢ "
format-connected-prefix-foreground = ${colors.bg1} 

[module/networkspeeddown]
type = internal/network
interface = wlp3s0
label-connected = "%downspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "ÔÅ£ "
format-connected-prefix-foreground = ${colors.bg1}

[module/date]
type = internal/date
interval = 1

date = %D
date-alt = %a %b %d, %Y

time = %l:%M%P
time-alt =  %H:%M:%S

format-prefix = "‚è∞ " 
format-prefix-foreground = ${colors.bg1}

label = %date% %time%

[module/volume]
type = internal/volume
master-soundcard = default 

format-volume =  <bar-volume>
format-volume-prefix = "ÔÄ® "
format-volume-foreground = ${colors.bg1}

format-muted-prefix = "ÔÄ¶x "
format-muted-foreground = ${colors.bg2}
label-muted = muted

bar-volume-width = 10
bar-volume-foreground-0 = #5af78e
bar-volume-foreground-1 = #5af78e
bar-volume-foreground-2 = #5af78e
bar-volume-foreground-3 = #5af78e
bar-volume-foreground-4 = #5af78e
bar-volume-foreground-5 = #f3f99d
bar-volume-foreground-6 = #ff5c57
bar-volume-gradient = false
bar-volume-indicator = ‚îÇ
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${colors.bg2}
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.bg1}

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 92
time-format = "%H:%M"

label-charging = %percentage%
label-discharging = "%percentage%% (%time%)"

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${xrdb: color0}
format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = "ÔâÄ "
format-full-prefix-foreground = green

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
ramp-capacity-foreground = ${colors.background}

animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-foreground = ${colors.bg1}
animation-charging-framerate = 750

[module/coretemps]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/.config/polybar/tempcores.sh

[module/pkg]
type = custom/script
interval = 1200
format = <label>
label = "%output:0:30%"
exec = .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/date]
type = internal/date
interval = 5

date =
date-alt = "%d/%m/%Y"

time = "%a %b %d, %I:%M %p "

time-alt = %H:%M

format-prefix-foreground = ${colors.my_foreground}
format-underline = ${colors.my_color5}

label = %date% %time%

[module/updateCheck]
type = custom/script
interval = 60
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
exec = ~/.config/polybar/updateCheck.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/gmail]
type = custom/script
interval = 60
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
